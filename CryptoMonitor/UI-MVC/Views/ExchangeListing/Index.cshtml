@using CryptoMonitor.Domain
@model IEnumerable<ExchangeListing>

@{
    ViewData["Title"] = "New Exchange Listings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-4">Exchange Listings</h1>
            <p class="text-muted">Recent additions to tracked exchanges.</p>
        </div>
        <a asp-action="Add" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-lg"></i> Add Listing
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No listings found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Date Listed</th>
                        <th>Cryptocurrency</th>
                        <th>Exchange</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var listing in Model)
                    {
                        <tr>
                            <td>@listing.ListingDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-controller="Crypto" asp-action="Details" asp-route-id="@listing.CryptocurrencyId" class="fw-bold text-decoration-none">
                                    @listing.Cryptocurrency?.Symbol
                                </a>
                                <span class="text-muted small">(@listing.Cryptocurrency?.Name)</span>
                            </td>
                            <td>
                                <a asp-controller="Exchange" asp-action="Details" asp-route-id="@listing.ExchangeId" class="text-decoration-none">
                                    @listing.Exchange?.Name
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Crypto" asp-action="Details" asp-route-id="@listing.CryptocurrencyId" class="btn btn-sm btn-outline-secondary">
                                    View Crypto
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>