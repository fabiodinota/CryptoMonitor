@model CryptoMonitor.UI.MVC.Models.AddExchangeViewModel

@{
    ViewData["Title"] = "Exchange Toevoegen";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Add" method="post">
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Bijv. Kraken" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Website" class="form-label">Website</label>
                    <input asp-for="Website" class="form-control" placeholder="Bijv. kraken.com" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrustScore" class="form-label">Trust Score (1-10)</label>
                    <input asp-for="TrustScore" class="form-control" type="number" min="1" max="10" />
                    <span asp-validation-for="TrustScore" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SelectedCryptoIds" class="form-label fw-bold">Listed Cryptocurrencies</label>
                    <select asp-for="SelectedCryptoIds" asp-items="Model.AvailableCryptos" class="form-select" multiple size="6">
                    </select>
                    <div class="form-text">
                        Select Cryptocurrencies that are to be traded on this exchange.<br/>
                        <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) pressed in to select multiple.</small>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Add Exchange</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}