@using CryptoMonitor.Domain
@model CryptoMonitor.UI.MVC.Models.AddCryptocurrencyViewModel

@{
    ViewData["Title"] = "Nieuwe Cryptocurrency";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Add" method="post">
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Bijv. Bitcoin" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Symbol" class="form-label">Symbol</label>
                        <input asp-for="Symbol" class="form-control" placeholder="Bijv. BTC" />
                        <span asp-validation-for="Symbol" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CurrentPrice" class="form-label">Current Price (â‚¬)</label>
                        <input asp-for="CurrentPrice" class="form-control" type="number" step="0.000001" />
                        <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label">Type</label>
                        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<CryptoType>()">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxSupply" class="form-label">Max Supply (Optional)</label>
                    <input asp-for="MaxSupply" class="form-control" type="number" />
                    <div class="form-text">Leave empty for infinite supply.</div>
                    <span asp-validation-for="MaxSupply" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SelectedExchangeIds" class="form-label fw-bold">Available on exchanges</label>
                    <select asp-for="SelectedExchangeIds" asp-items="Model.AvailableExchanges" class="form-select" multiple size="5">
                    </select>
                    <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) pressed in to select multiple.</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Add Cryptocurrency</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}